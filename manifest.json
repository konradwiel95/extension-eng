{
    "manifest_version": 3,
    "name": "Quick Translator",
    "version": "2.0.0",
    "description": "Select any word or sentence, click the translate icon, and get an instant translation. Choose your target language in the popup.",
    "permissions": ["storage"],
    "action": {
        "default_popup": "popup.html",
        "default_title": "Quick Translator â€“ Settings"
    },
    "icons": {
        "48": "icon48.png",
        "128": "icon128.png"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"],
            "run_at": "document_idle"
        }
    ]
}
